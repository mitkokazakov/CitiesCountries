@model CityCountry.DTO.AddCityFormModel

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <h2 class="heading-margin text-center">Add City</h2>

        <form asp-controller="Cities" asp-action="Add" method="post">
            <div class="d-flex justify-content-between">
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" placeholder="City...">
                    <span asp-validation-for="Name" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CountryName"></label>
                    <input asp-for="CountryName" class="form-control" placeholder="Country...">
                    <span asp-validation-for="CountryName" class="small text-danger"></span>
                </div>
            </div>
            

            <div class="d-flex justify-content-center">
                <input class="btn btn-success mt-3 text-center" type="submit" value="Add" />
            </div>

        </form>
    </div>


</div>


@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}